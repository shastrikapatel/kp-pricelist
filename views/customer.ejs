<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Price List</title>
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 10px;
        padding: 0;
    }
    h2 {
        text-align: center;
        margin-bottom: 20px;
    }
    .input-section {
        display: flex;
        justify-content: center;
        margin-bottom: 15px;
        flex-wrap: wrap;
    }
    .input-section input {
        padding: 10px;
        font-size: 16px;
        width: 90%;
        max-width: 400px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }
    .table-container {
        width: 100%;
        overflow-x: auto; /* Allows horizontal scroll on small screens */
    }
    table {
        width: 100%;
        min-width: 500px;
        border-collapse: collapse;
        margin-bottom: 20px;
    }
    th, td {
        padding: 10px;
        text-align: center;
        border: 1px solid #ddd;
        font-size: 14px;
    }
    .total {
        font-size: 20px;
        font-weight: bold;
        text-align: center;
        margin-bottom: 15px;
    }
    .button-group {
        display: flex;
        justify-content: center;
        gap: 10px;
        flex-wrap: wrap;
    }
    .button-group button {
        padding: 10px 15px;
        font-size: 16px;
        cursor: pointer;
        border: none;
        border-radius: 5px;
        background-color: #007bff;
        color: #fff;
        transition: background 0.3s;
    }
    .button-group button:hover {
        background-color: #0056b3;
    }

    /* Responsive Styles */
    @media (max-width: 768px) {
        th, td {
            font-size: 12px;
            padding: 8px;
        }
        .total {
            font-size: 18px;
        }
    }
    @media (max-width: 480px) {
        .button-group {
            flex-direction: column;
        }
        .button-group button {
            width: 100%;
        }
    }
</style>
</head>
<body>

<h2>Price List</h2>

<div class="input-section">
    <input type="text" id="customerName" placeholder="Enter your number">
</div>

<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Price (₹)</th>
                <th>Quantity</th>
                <th>Total (₹)</th>
            </tr>
        </thead>
        <tbody id="itemList">
            <% items.forEach(item => { %>
            <tr>
                <td><%= item.name %></td>
                <td class="price" data-price="<%= item.price %>"><%= item.price %></td>
                <td>
                    <button onclick="decreaseQty(this)">-</button>
                    <span class="qty">0</span>
                    <button onclick="increaseQty(this)">+</button>
                </td>
                <td class="total-price">0</td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<div class="total">
    Grand Total: ₹<span id="grandTotal">0</span>
</div>

<div class="button-group">
    <button onclick="shareWhatsApp()">Share via WhatsApp</button>
    <button onclick="resetCart()">Reset</button>
</div>

<script>
const adminNumber = '917600361112'; // Replace with your admin WhatsApp number including country code

function updateTotal() {
    let total = 0;
    document.querySelectorAll('#itemList tr').forEach(row => {
        let price = parseInt(row.querySelector('.price').getAttribute('data-price'));
        let qty = parseInt(row.querySelector('.qty').textContent);
        let rowTotal = price * qty;
        row.querySelector('.total-price').textContent = rowTotal;
        total += rowTotal;
    });
    document.getElementById('grandTotal').textContent = total;
}

function increaseQty(button) {
    let qtyElement = button.parentElement.querySelector('.qty');
    qtyElement.textContent = parseInt(qtyElement.textContent) + 1;
    updateTotal();
}

function decreaseQty(button) {
    let qtyElement = button.parentElement.querySelector('.qty');
    if (parseInt(qtyElement.textContent) > 0) {
        qtyElement.textContent = parseInt(qtyElement.textContent) - 1;
        updateTotal();
    }
}

function resetCart() {
    document.querySelectorAll('#itemList tr .qty').forEach(qty => qty.textContent = 0);
    updateTotal();
}

function shareWhatsApp() {
    let name = document.getElementById('customerName').value.trim();
    if (!name) { alert('Please enter your number.'); return; }

    let message = `Order from ${name}:%0A`;
    document.querySelectorAll('#itemList tr').forEach(row => {
        let qty = parseInt(row.querySelector('.qty').textContent);
        if (qty > 0) {
            let itemName = row.cells[0].textContent;
            let price = row.cells[1].textContent;
            message += `${itemName} - ${qty} x ₹${price} = ₹${qty * price}%0A`;
        }
    });
    message += `Grand Total: ₹${document.getElementById('grandTotal').textContent}`;

    window.open(`https://wa.me/${adminNumber}?text=${message}`, '_blank');
}

updateTotal(); // initial call
</script>

</body>
</html>
